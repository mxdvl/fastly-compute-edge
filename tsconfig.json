{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "customConditions": ["fastly"],
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "rootDir": "src",
    "outDir": "build"
  },
  "include": ["./src/**/*.js"],
  "exclude": ["node_modules"]
}
